@model IEnumerable<SocialNetwork.Models.Post>

@foreach (var item in Model)
{
    <div class="card-post">
        <div class="row">
            <div class="col-xs-3 col-sm-2">
                <a href="personal-profile.html" title="Profile">
                    <img src="~/Content/img/user.jpg" alt="User name" class="img-circle img-user">
                </a>
            </div>
            <div class="col-xs-9 col-sm-10 info-user">
                <h3><a href="personal-profile.html" title="Profile">@Html.DisplayNameFor(model => model.UserID) @item.UserID</a></h3>
                <p><i>@item.DatePosted</i></p>
            </div>
        </div>
        <div class="row">
            <div class="col-sm-8 col-sm-offset-2 data-post">
                <p>@item.Description</p>
                <br>
                @{if (item.ImagePath != null)
                  {
                    <img src="@Url.Content(item.ImagePath)" alt="image post" class="img-post">
                  }
                }
                <div class="reaction">
                    &#x2764; 0 @item.Likes
                </div>
                <div class="comments">
                    @item.Comments 0 Comments
                    <form>
                        <input type="text" class="form-control" placeholder="Add a comment">
                    </form>
                </div>
            </div>
        </div>
    </div>
}

